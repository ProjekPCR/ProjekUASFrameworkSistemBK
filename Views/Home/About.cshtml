@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/HomeAbout.css" />
}

<section class="about-section">
    <div class="about-container">
        <div class="about-image">
            <img src="~/images/about.png" alt="Student">
        </div>
        <div class="about-content">
            <h2>About</h2>
            <p>
                <strong>BKSmart</strong> adalah sistem informasi berbasis web yang membantu guru BK mencatat, mengelola, dan memantau proses konseling siswa secara digital.
                Dengan tampilan yang sederhana dan mudah digunakan, BKSmart hadir untuk mendukung layanan bimbingan dan konseling yang lebih efektif dan terdokumentasi dengan baik.
            </p>
            <a asp-controller="Login" asp-action="Login" class="btn-getstarted">Get Started</a>

        </div>
    </div>
</section>