@model ProjekUASFrameworkSistemBK.Models.KonselingViewModel
@{
    ViewData["Title"] = "Detail Konseling";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 class="mb-4">Detail Konseling</h2>

<div class="form-group">
    <label>Nama:</label>
    <p>@Model.Nama</p>
</div>

<div class="form-group">
    <label>NIS:</label>
    <p>@Model.NIS</p>
</div>

<div class="form-group">
    <label>Tanggal:</label>
    <p>@Model.Tanggal.ToString("dd/MM/yyyy")</p>
</div>

<div class="form-group">
    <label>Topik:</label>
    <p>@Model.Topik</p>
</div>

<div class="form-group">
    <label>Media:</label>
    <p>@Model.Media</p>
</div>

<div class="form-group">
    <label>Catatan:</label>
    <p style="white-space: pre-wrap;">@Html.Raw(Model.Catatan)</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Kembali</a>