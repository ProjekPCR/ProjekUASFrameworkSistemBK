@{
	ViewData["Title"] = "BKSmart - Sistem Bimbingan Konseling";
	Layout = null; // Use this layout for the entire site

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BKSmart</title>
    <link rel="stylesheet" href="~/css/layout.css" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <header class="main-header">
        <div class="logo-area">
            <img src="~/images/logo.png" alt="logo" />
        </div>
        <nav class="main-nav">
            <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">Home</a>
            <a asp-controller="Home" asp-action="About">About</a>
        </nav>
    </header>

    <main role="main" class="main-content">
        @RenderBody()
    </main>
</body>

<footer class="main-footer">
    <div class="container">
        <p>&copy; 2023 BKSmart - Sistem Bimbingan Konseling</p>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
}