@model ProjekUASFrameworkSistemBK.Models.SiswaViewModel

@{
    ViewData["Title"] = "Edit Data Siswa";
    Layout = "~/Views/Shared/_Header.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/SiswaEdit.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}

<div class="content-wrapper">
    <h2 class="title">Edit Data Siswa</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="form-siswa">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nama"></label>
                    <input asp-for="Nama" class="form-control" />
                    <span asp-validation-for="Nama" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NIS"></label>
                    <input asp-for="NIS" class="form-control" />
                    <span asp-validation-for="NIS" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Kelas"></label>
                    <input asp-for="Kelas" class="form-control" />
                    <span asp-validation-for="Kelas" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="JenisKelamin">Jenis Kelamin</label>
                    <select asp-for="JenisKelamin" class="form-control">
                        <option value="">-- Pilih --</option>
                        <option value="L">Laki-laki</option>
                        <option value="P">Perempuan</option>
                    </select>
                    <span asp-validation-for="JenisKelamin" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Alamat"></label>
                    <input asp-for="Alamat" class="form-control" />
                    <span asp-validation-for="Alamat" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NoTelp">No Telp</label>
                    <input asp-for="NoTelp" class="form-control" />
                    <span asp-validation-for="NoTelp" class="text-danger"></span>
                </div>

                <div class="form-group mt-3 d-flex justify-content-end">
                    <input type="submit" value="Simpan" class="btn-simpan" />
                    <a asp-action="Index" class="btn-kembali">Kembali</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}