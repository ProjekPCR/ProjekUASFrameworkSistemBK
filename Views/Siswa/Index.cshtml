@model IEnumerable<ProjekUASFrameworkSistemBK.Models.SiswaViewModel>

@{
    ViewData["Title"] = "Data Siswa";
    Layout = "~/Views/Shared/_Header.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/SiswaIndex.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}

<div class="content-wrapper">
    <h2 class="title">Data Siswa</h2>

    <div class="table-toolbar">
        <div class="entries-control">
            <label>Show</label>
            <select class="form-select">
                <option selected>10</option>
                <option>25</option>
                <option>50</option>
            </select>
            <label>entries</label>
        </div>
        <div class="button-group">
            <a asp-action="Index" class="btn-refresh">
                <i class="fas fa-sync-alt"></i> Refresh Data</a>
            <a asp-action="Create" class="btn-insert">
                <i class="fas fa-plus"></i> Insert Data</a>
        </div>
    </div>

    <div class="table-responsive-custom">
        <table class="table table-hover table-bordered table-siswa">
            <thead class="table-light">
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>NIS</th>
                    <th>Kelas</th>
                    <th>Jenis Kelamin</th>
                    <th>Alamat</th>
                    <th>No.Telp</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int no = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@no</td>
                            <td>@item.Nama</td>
                            <td>@item.NIS</td>
                            <td>@item.Kelas</td>
                            <td>@item.JenisKelamin</td>
                            <td>@item.Alamat</td>
                            <td>@item.NoTelp</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-outline-edit" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-outline-delete" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        no++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">Tidak ada data siswa.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="table-toolbar justify-content-end">
        <a asp-controller="Dashboard" asp-action="Index" class="btn-outline-kembali">
            <i class="fas fa-arrow-left"></i> Kembali
        </a>
    </div>

</div>